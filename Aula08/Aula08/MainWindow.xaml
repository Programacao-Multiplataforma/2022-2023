<Window x:Class="Aula08.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula08"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Validação de texto" Height="266" Width="350">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Texto:" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="tbTexto" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Button Grid.Column="2" Grid.Row="0" x:Name="btnInserir" Content="Inserir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Click="btnInserir_Click"/>
        <ListBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Height="200" x:Name="lbTexto"/>
    </Grid>
</Window>
