<Window x:Class="Aula04.WindowFiguras"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula04"
        mc:Ignorable="d"
              Title="Adicionar Figura" Height="155" Width="232">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Figura:" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbFiguras" x:FieldModifier="private" HorizontalAlignment="Left" Margin="52,10,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Quadrado"/>
            <ComboBoxItem Content="Retangulo"/>
            <ComboBoxItem Content="Circulo"/>
        </ComboBox>
        <Button x:Name="btnInserir" x:FieldModifier="private" Content="Inserir" HorizontalAlignment="Left" Margin="135,85,0,0" VerticalAlignment="Top" Click="btnInserir_Click"/>
    </Grid>
</Window>
