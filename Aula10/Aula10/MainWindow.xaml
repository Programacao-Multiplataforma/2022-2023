<Window x:Class="Aula10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula10"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        Title="Gestor de Bateria - 0%" Height="140" Width="370">
    <StackPanel Orientation="Horizontal" Margin="5">
        <Button x:Name="btnDescarregar" Content="-" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50" Height="50" FontSize="30" Click="btnDescarregar_Click"/>
        <Separator Width="5" Visibility="Hidden"/>
        <ProgressBar x:Name="pbBateria" HorizontalAlignment="Left" Height="50" VerticalAlignment="Center" Width="232" Background="#FFE6E6E6"/>
        <Separator Width="5" Visibility="Hidden"/>
        <Button x:Name="btnCarregar" Content="+" HorizontalAlignment="Left" VerticalAlignment="Center" Width="50" Height="50" FontSize="30" Click="btnCarregar_Click"/>
    </StackPanel>
</Window>
