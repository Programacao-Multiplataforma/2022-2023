<Window x:Class="Aula07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula07"
        mc:Ignorable="d"
         Title="Gestão de Ficheiros" Height="218" Width="313">
    <Grid>
        <TextBox x:Name="tbFicheiro" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="165" Height="182" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
        <Button x:Name="btnAbrir" Content="Abrir" HorizontalAlignment="Left" Margin="205,3,0,0" VerticalAlignment="Top" Width="61" Height="34" Click="btnAbrir_Click"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="205,42,0,0" VerticalAlignment="Top" Width="61" Height="34" Click="btnGuardar_Click"/>
    </Grid>
</Window>
